<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     android:fadeScrollbars="false" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.08"
            android:background="@color/White"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:text="@string/str_care_new_born"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/Brown" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_border2"
            android:divider="@drawable/divider"
            android:orientation="vertical"
            android:padding="10dp"
            android:showDividers="middle" >

            <org.grameenfoundation.cch.utils.TextViewBullets
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:text="Counsel pregnant women to register her newborn at birth with NHIS"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <org.grameenfoundation.cch.utils.TextViewBullets
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:text="Need for ear piercing and circumcision "
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <org.grameenfoundation.cch.utils.TextViewBullets
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:text="Sickle cell disease screening "
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <org.grameenfoundation.cch.utils.TextViewBullets
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:text="Importance of good cord care "
                android:textAppearance="?android:attr/textAppearanceSmall" />
            
              <org.grameenfoundation.cch.utils.TextViewBullets
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:text="Counsel pregnant woman how to give home care after baby is born, which include:"
                android:textAppearance="?android:attr/textAppearanceSmall" />
        </LinearLayout>

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_border2"
            android:divider="@drawable/divider"
            android:orientation="vertical"
            android:padding="10dp"
            android:showDividers="middle" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/ImageView05"
                    android:layout_width="84dp"
                    android:layout_height="137dp"
                    android:src="@drawable/breast_feeding_family_planning" />

                <TextView
                    android:id="@+id/TextView13"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/str_breast_feed_frequently_10_24hr"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/TextBrown" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/TextView12"
                    android:layout_width="156dp"
                    android:layout_height="match_parent"
                    android:text="@string/str_good_hygience_hand_washing"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/TextBrown" />

                <ImageView
                    android:id="@+id/ImageView04"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/express_milk4" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/ImageView03"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/rest_take_fluid" />

                <TextView
                    android:id="@+id/TextView11"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/str_need_rest_drink_plenty_fluid"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/TextBrown" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/TextView10"
                    android:layout_width="174dp"
                    android:layout_height="match_parent"
                    android:text="@string/str_importance_sleep_itn_every_night"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/TextBrown" />

                <ImageView
                    android:id="@+id/ImageView02"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/sleep_itn_net" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/ImageView01"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/nurse_advice_drugs" />

                <TextView
                    android:id="@+id/TextView08"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/str_iron_folic_acid_suppliment"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/TextBrown" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                 android:orientation="horizontal" >

                <TextView
                    android:id="@+id/TextView05"
                    android:layout_width="158dp"
                    android:layout_height="wrap_content"
                    android:text="@string/str_keep_babdy_warm"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/TextBrown" />

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/baby_keep_warm" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</ScrollView>