<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <Button
        android:id="@+id/button_reminders"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="Set reminders"
        android:textColor="@color/TextColorWine" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/checkBox_daily"
        android:orientation="vertical" >

        <ListView
            android:id="@+id/listView_targets"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:dividerHeight="2dp" >
        </ListView>
    </LinearLayout>

    <CheckBox
        android:id="@+id/checkBox_daily"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/button_reminders"
        android:text="Daily" />

    <CheckBox
        android:id="@+id/checkBox_weekly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_reminders"
        android:layout_centerHorizontal="true"
        android:text="Weekly" />

    <CheckBox
        android:id="@+id/checkBox_monthly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/checkBox_weekly"
        android:layout_alignBottom="@+id/checkBox_weekly"
        android:layout_alignParentRight="true"
        android:text="Monthly" />

    <Button
        android:id="@+id/button_update"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Update Targets"
        android:textColor="@color/TextColorWine" />

</RelativeLayout>